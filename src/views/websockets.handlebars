<h1 class="text-center">Socket Client</h1>

<div id="error" class="text-center h1 text-danger"></div>

<form id="formSockets" class="text-center mb-5 mx-5">
    <div class="form-group">
        <label for="title">title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="description">description</label>
        <input type="text" class="form-control" id="description" placeholder="Enter description">
    </div>
    <div class="form-group">
        <label for="code">code</label>
        <input type="text" class="form-control" id="code" placeholder="Enter code">
    </div>
    <div class="form-group">
        <label for="price">price</label>
        <input type="number" class="form-control" id="price" placeholder="Enter price">
    </div>
    <div class="form-group">
        <label for="stock">stock</label>
        <input type="number" class="form-control" id="stock" placeholder="Enter stock">
    </div>
    <div class="form-group">
        <label for="category">category</label>
        <input type="text" class="form-control" id="category" placeholder="Enter category">
    </div>
    <button id="buttonAddProduct" type="submit" value="SEND" class="btn btn-primary">Submit</button>
</form>

<p id="products"></p>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>